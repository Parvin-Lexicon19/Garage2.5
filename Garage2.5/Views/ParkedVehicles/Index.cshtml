@model IEnumerable<Garage2._5.ViewModel.VehicleListDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Parked Vehicle Details</h1>

<p>
    <a asp-action="Park">Park New Vehicle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <div>
                    <a asp-action="Sort" asp-route-columnName="RegNo" class="btn btn-primary"><i class="fa fa-search">Sort</i></a>
                </div>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                <div>
                    <a asp-action="Sort" asp-route-columnName="Type" class="btn btn-primary"><i class="fa fa-search">Sort</i></a>
                </div>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                <div>
                    <a asp-action="Sort" asp-route-columnName="CheckInTime" class="btn btn-primary"><i class="fa fa-search">Sort</i></a>
                </div>
                @Html.DisplayNameFor(model => model.CheckInTime)
            </th>
            <th>
                <div>
                    <a asp-action="Sort" asp-route-columnName="OwnerName" class="btn btn-primary"><i class="fa fa-search">Sort</i></a>
                </div>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Unpark" asp-route-id="@item.Id">Un Park</a>
            </td>
        </tr>
}
    </tbody>
</table>
