@model IEnumerable<Garage2._5.ViewModels.VehicleListDetails>

@{
    ViewData["Title"] = "Index";
}

    <h1 class="text-light bg-info border rounded-lg p-3">Parked Vehicle Details</h1>

    <p>
        <a asp-action="Park">Park New Vehicle</a>
        <a class="float-right" asp-action="GetStatistic">Statistics</a>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckInTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Unpark" asp-route-id="@item.Id">Un Park</a>
            </td>
        </tr>
}
    </tbody>
</table>
